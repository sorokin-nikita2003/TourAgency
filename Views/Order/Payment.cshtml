@model agency.Models.Order
Номер заказа - @ViewBag.Id
<form asp-action="PaymentCard" method="post">
    <div class="form-group">
        <label class="control-label">Введите номер карты:</label>
        <input name="cartNum" type="number" maxlength="16" class="form-control w-25" />
        <p style="color: red;">@ViewBag.card</p>
    </div>
    <div class="form-group">
        
        <label class="control-label">Введите cvv номер:</label>
        <input name="cvv" type="number" class="form-control" style="width:100px" />
        <p style="color: red;">@ViewBag.cvv</p>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Оплатить" class="btn btn-primary" />
    </div>
</form>
